<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" xmlns:fildReminder="http://schemas.android.com/apk/res/cz.limeth.fildreminder">

    <PreferenceCategory
        android:title="@string/title_preferences_reminder"
        android:key="pref_key_category_reminder">

        <cz.limeth.fildreminder.preferences.SeekBarPreference
            android:key="pref_key_category_reminder_delay"
            android:defaultValue="@integer/pref_default_category_reminder_delay"
            android:max="600"
            fildReminder:exponent="2.8"
            fildReminder:coefficient="0.001"
            fildReminder:absolute="1"
            android:title="@string/pref_key_category_reminder_delay_title"
            android:summary="@string/pref_key_category_reminder_delay_summary"
            android:text="@string/pref_key_category_reminder_delay_unit"
            android:dialogMessage="@string/pref_key_category_reminder_delay_dialogmessage" />

        <cz.limeth.fildreminder.preferences.SeekBarPreference
            android:key="pref_key_category_reminder_vibrator"
            android:defaultValue="@integer/pref_default_category_reminder_vibrator"
            android:max="10000"
            android:title="@string/pref_key_category_reminder_vibrator_title"
            android:summary="@string/pref_key_category_reminder_vibrator_summary"
            android:text="@string/pref_key_category_reminder_vibrator_unit"
            android:dialogMessage="@string/pref_key_category_reminder_vibrator_dialogmessage" />

        <cz.limeth.fildreminder.preferences.FileChooserPreference
            android:key="pref_key_category_reminder_audio"
            fildReminder:requestCode="100"
            android:title="@string/pref_key_category_reminder_audio_title"
            android:summary="@string/pref_key_category_reminder_audio_summary"
            fildReminder:chooserTitle="@string/pref_key_category_reminder_audio_choosertitle" />

    </PreferenceCategory>

</PreferenceScreen>
